<div class="container">

    <div class="row">
        <div class="col s3 logo">
            <img class="title-pic" src="../../assets/img/burger.png" alt="good-burger">
        </div>
        <div class="col s5">
            <h3 class="center-align">Burger World </h3>
        </div>
    </div>

    <div class="divider"></div>

    <div class="row center-align">
        <div class="col s6">
            <div id="to-eat">
                <h4>Burgers to Eat</h4>
            </div>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li> {{this.burger_name}} <button data-id="{{this.id}}" class="waves-effect waves-light btn-small devour">Devour It!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col s6">
            <div id="eaten">
                <h4>Burgers Eaten</h4>
                <ul>
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li>{{this.burger_name}}</li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <form class="col s12 create-form">
            <div class="row">
                <div class="input-field col s12">
                              <i class="material-icons prefix">restaurant</i>

                <textarea id="burger" class="materialize-textarea" name="burger_name"></textarea>
                <label for="burger">Add your burger here!</label>
            </div>
            
            <button class="btn waves-effect waves-light" type="submit">Submit
                <i class="material-icons right">restaurant_menu</i>
            </button>
            <div id="subcaption">Enter a burger you want to eat and click "Submit"</div>
            </div>
        </form>
    </div>
    </div>