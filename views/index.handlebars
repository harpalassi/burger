<div class="container">
    <header>
        <div class="row">
            <div class="col s12">
                <div class="logo center-align">
                    <img class="title-pic" src="../../assets/img/burger2.png" alt="burger-world">
                </div>
            </div>
        </div>
    </header>

    <div class="divider"></div>
    <main>
        <div class="row center-align">
            <div class="col s12 l6">
                <div class="menu">
                    <ul class="collection with-header">
                        <li class="collection-header">
                            <h5>Today's Menu</h5>
                        </li>
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <li class="collection-item">#{{this.id}} - {{this.burger_name}} <button data-id="{{this.id}}"
                                class="waves-effect waves-red btn-small devour">Devour
                                It!</button>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>

            <div class="col s12 l6">
                <div id="eaten">
                    <ul class="collection with-header">
                        <li class="collection-header">
                            <h5>Burgers Eaten</h5>
                        </li>
                        {{#each burgers}}
                        {{#if this.devoured}}
                        <li class="collection-item">#{{this.id}} - {{this.burger_name}}</li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="row">
            <form class="create-form">
                <div class="row center-align">
                    <div class="col s8 offset-s2">
                        <div class="input-field">
                            <i class="material-icons prefix">restaurant</i>
                            <textarea id="burger" class="materialize-textarea validate" name="burger_name" required></textarea>
                            <label for="burger">Add your burger here!</label>
                        </div>

                        <button class="btn waves-effect" tabindex="0" id="sub-burger" type="submit">Submit
                            <i class="material-icons right">restaurant_menu</i>
                        </button>
                        <div id="subcaption">Enter a burger you'd like to eat and click "Submit".</div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>